<section>
    <div class="conatiner mt-5 p-5">
        <div class="row">
            <div class="ml-auto">
                <a href="/add-product" class="btn btn-success mb-5 ml-auto">Add products</a>
            </div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">description</th>
                        <th scope="col">price</th>
                        <th scope="col">Edit</th>
                        <th scope="col">delete</th>
                    </tr>
                </thead>
                {{#each products}}
                <tbody>
                    <tr>
                        <th scope="row">{{this._id}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td>
                        <a href="/edit-product/{{this._id}}"class="btn btn-primary">Edit</a></td>
                        <td>
                            <a href="/delete-product/{{this._id}}"class="btn btn-danger" onclick="return confirm('are you sure want to delete {{this.name}} ?')">Delete</a>
                        </td>
                    </tr>
                    
                </tbody>
                {{/each}}
            </table>


        </div>
    </div>
</section>